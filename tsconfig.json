{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
